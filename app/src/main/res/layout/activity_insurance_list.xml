<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insuranceLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.siteurl.www.saifinance.activities.InsuranceList">

    <include
        android:id="@+id/insurance_list_toolbar"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/no_policy"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/noPolicy"
        android:layout_below="@+id/noPolicy"
        android:background="@drawable/button_signin_background"
        android:letterSpacing="0.025"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="New Insurance Request"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textColor="@color/whiteColor"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/noPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:text="We haven't found any insurance policies on your account. We recommend you to insure yourself along with your family and assets to avoid financial damage in future."
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:textStyle="bold" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/insuranceLists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/insurance_list_toolbar" />


</RelativeLayout>
