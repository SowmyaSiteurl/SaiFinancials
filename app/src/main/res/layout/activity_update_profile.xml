<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profilePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.siteurl.www.saifinance.activities.UpdateProfile">

    <include
        android:id="@+id/profile_toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/profileNameTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColorHint="@color/textColor">

                    <EditText
                        android:id="@+id/profileNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/textColor"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:textColor="@color/textColor"
                        android:textColorHighlight="@color/signInBackground"
                        android:textColorHint="@color/signInBackground" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/profileEmailTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColorHint="@color/textColor">

                    <EditText
                        android:id="@+id/profilelEmailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/textColor"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/textColor"
                        android:textColorHighlight="@color/signInBackground"
                        android:textColorHint="@color/signInBackground" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/profilePhoneTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColorHint="@color/textColor">

                    <EditText
                        android:id="@+id/profilePhomeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/textColor"
                        android:hint="Mobile No."
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="@color/textColor"
                        android:textColorHighlight="@color/signInBackground"
                        android:textColorHint="@color/signInBackground" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/calenderDob"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/calender" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/profileDobTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/textColor">

                    <EditText
                        android:id="@+id/profileDobEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/textColor"
                        android:focusable="false"
                        android:hint="Date of Birth"
                        android:textColor="@color/textColor"
                        android:textColorHighlight="@color/signInBackground"
                        android:textColorHint="@color/signInBackground" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/profilePanTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/textColor">

                    <EditText
                        android:id="@+id/profilePanEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/textColor"
                        android:hint="Pan No."
                        android:textColor="@color/textColor"
                        android:textColorHighlight="@color/signInBackground"
                        android:textColorHint="@color/signInBackground" />

                </android.support.design.widget.TextInputLayout>

                //alphaNumeric
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/profileAadharTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColorHint="@color/textColor">

                    <EditText
                        android:id="@+id/profileAadharEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/textColor"
                        android:hint="Aadhaar No."
                        android:inputType="phone"
                        android:maxLength="12"
                        android:textColor="@color/textColor"
                        android:textColorHighlight="@color/signInBackground"
                        android:textColorHint="@color/signInBackground" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/calenderAnniversary"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/calender" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/profileAnniversaryTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/textColor">

                    <EditText
                        android:id="@+id/profileAnniversaryEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/textColor"
                        android:focusable="false"
                        android:hint="Anniversary Date"
                        android:textColor="@color/textColor"
                        android:textColorHighlight="@color/signInBackground"
                        android:textColorHint="@color/signInBackground" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/update_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_signin_background"
                android:letterSpacing="0.025"
                android:onClick="updateProfile"
                android:padding="10dp"
                android:text="Update Profile"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textSize="16dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
